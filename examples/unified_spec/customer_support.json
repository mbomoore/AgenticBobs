{
  "name": "Customer Support Process",
  "case_schema": {
    "type": "object",
    "properties": {
      "ticket": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "customer_email": { "type": "string" },
          "description": { "type": "string" },
          "status": { "type": "string", "enum": ["new", "triaged", "in_progress", "resolved", "closed"], "default": "new" },
          "priority": { "type": "string", "enum": ["low", "medium", "high"], "default": "medium" },
          "category": { "type": "string", "enum": ["billing", "technical", "general"], "default": "general" }
        },
        "required": ["id", "customer_email", "description"]
      },
      "audit_trail": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "timestamp": { "type": "string", "format": "date-time" },
            "message": { "type": "string" }
          }
        }
      }
    }
  },
  "work_units": [
    {
      "name": "Triage Ticket",
      "description": "Categorize and prioritize the incoming support ticket.",
      "goal_tag": "ticket_triage",
      "input_views": [
        { "name": "ticket_details", "query": "SELECT ticket.id, ticket.description FROM ticket" }
      ],
      "output_schema": {
        "type": "object",
        "properties": {
          "priority": { "type": "string", "enum": ["low", "medium", "high"] },
          "category": { "type": "string", "enum": ["billing", "technical", "general"] }
        }
      },
      "done_condition": "ticket.status != 'new'"
    },
    {
      "name": "Generate Standard Response",
      "description": "For low-priority issues, generate a standard response using a template.",
      "goal_tag": "standard_response",
      "input_views": [
        { "name": "ticket_info", "query": "SELECT ticket.id, ticket.customer_email, ticket.description FROM ticket" }
      ],
      "done_condition": "ticket.priority == 'low' AND ticket.status == 'resolved'"
    },
    {
      "name": "Route to Specialist",
      "description": "For high-priority or complex issues, route to a human specialist.",
      "goal_tag": "specialist_routing",
      "input_views": [
        { "name": "ticket_info", "query": "SELECT ticket.id, ticket.description, ticket.priority, ticket.category FROM ticket" }
      ],
      "done_condition": "ticket.priority IN ('medium', 'high') AND ticket.status == 'in_progress'"
    },
    {
      "name": "Close Ticket",
      "description": "Close the ticket and notify the customer.",
      "goal_tag": "ticket_close",
      "input_views": [
        { "name": "ticket_id", "query": "SELECT ticket.id, ticket.customer_email FROM ticket" }
      ],
      "done_condition": "ticket.status == 'resolved'"
    }
  ],
  "execution_bindings": [
    {
      "goal_tag": "ticket_triage",
      "executor": "ai_agent",
      "condition": "True"
    },
    {
      "goal_tag": "standard_response",
      "executor": "ai_agent",
      "condition": "True"
    },
    {
      "goal_tag": "specialist_routing",
      "executor": "human",
      "condition": "True"
    },
    {
      "goal_tag": "ticket_close",
      "executor": "system",
      "condition": "True"
    }
  ],
  "combinators": []
}
